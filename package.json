{
  "name": "vscode-content-converter-extension",
  "version": "1.0.1",
  "homepage": "https://github.com/hi-ogawa/vscode-content-converter-extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/hi-ogawa/vscode-content-converter-extension"
  },
  "publisher": "hi-ogawa",
  "displayName": "Content Converter",
  "engines": {
    "vscode": "^1.36.0"
  },
  "main": "./build/extension.js",
  "activationEvents": [
    "onCommand:extension.content-converter.run"
  ],
  "contributes": {
    "commands": [
      {
        "title": "Run content converter",
        "command": "extension.content-converter.run",
        "enablement": "resourceSet"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.content-converter.run"
        }
      ],
      "editor/title/context": [
        {
          "command": "extension.content-converter.run"
        }
      ],
      "explorer/context": [
        {
          "command": "extension.content-converter.run"
        }
      ]
    },
    "configuration": {
      "title": "content converter configuration",
      "properties": {
        "content-converter": {
          "type": "object",
          "default": {
            "converters": []
          },
          "converters": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "command"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "command": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "node ./build/test/run-test.js",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.11",
    "@types/vscode": "^1.36.0",
    "@vscode/test-electron": "^1.6.2",
    "mocha": "^9.1.3",
    "prettier": "^2.5.0",
    "typescript": "^4.5.2"
  },
  "volta": {
    "node": "16.13.1",
    "npm": "8.2.0"
  }
}
